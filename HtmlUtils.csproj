<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Library</OutputType>
        <TargetFramework>net9.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageId>PSHtmlUtils</PackageId>
        <Version>0.1</Version>
        <Title>PSHtmlUtils</Title>
        <Description>Two cmdlets and some types for reading HTML like javascript.</Description>
        <RepositoryUrl>https://github.com/crashonthebeat/PSHtmlUtils</RepositoryUrl>
        <Company />
        <Product>HtmlUtils</Product>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="PowerShellStandard.Library" Version="5.1.1">
            <PrivateAssets>All</PrivateAssets>
        </PackageReference>
        <PackageReference Include="System.Management.Automation" Version="7.5.1" />
    </ItemGroup>

</Project>
